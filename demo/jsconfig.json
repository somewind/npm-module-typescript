    "noUnusedLocals": true,
    "noImplicitAny": true,
    "lib": ["es2018", "scripthost", "dom"],
    "baseUrl": "./",
    "paths": {
    },
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "demo"
  ]
}