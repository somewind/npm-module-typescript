{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "useJSXTextNode": true,
    "project": "tsconfig.json",
    "tsconfigRootDir": "./"
  },
  "extends": ["standard"],
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/indent": ["error", 2],
  },
  "overrides": [
    {
        "files": "*.test.js",
        "rules": {
            "no-undef": "off"
        }
    }
  ]
}
